<!DOCTYPE html>
<html>
<head>
  <title>Nemestudio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'nemestudio', madia: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'nemestudio_media', media: 'screen', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
 <meta name="viewport" content="width=device-width" />
</head>
<body>
  <%= yield %>
    <script>
    $("#slideshow > div:gt(0)").hide();

    setInterval(function() { 
      $('#slideshow > div:first')
        .fadeOut(1000)
        .next()
        .fadeIn(1000)
        .end()
        .appendTo('#slideshow');
    },  4000);

    $(document).ready(function(){
      $("#hideShowDiv").hide();
      $("#show").click(function(){
        $("#hideShowDiv").slideDown();
      });
      $("#hide").click(function(){
        $("#hideShowDiv").slideUp();
      });
    });
</script>
</body>
</html>